#!/bin/bash
STAGE=$1

source .env.$STAGE

SRC=src
OUT=out
BROWSERIFY=node_modules/browserify/bin/cmd.js
TACHYONS=node_modules/tachyons/css/tachyons.min.css

rm -rf $OUT
mkdir -p $OUT

$BROWSERIFY -o $OUT/index.bundle.js $SRC/index.js --debug

eval "cat <<EOF
$(<index.html)
EOF
" 2> /dev/null >$OUT/index.html
cp img_trans.gif $OUT
cp styling.css $OUT
cp $TACHYONS $OUT
