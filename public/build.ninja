src_dir = .
build_dir = out

rule cp
  command = cp $in $out

rule sass
  command = sass $in $out

build $build_dir/index.html: cp index.html
build $build_dir/static/css/styling.css: sass static/css/styling.scss
build $build_dir/static/js/d3.min.js: cp static/js/d3.min.js
build $build_dir/static/js/move_to_line_thickness.js: cp static/js/move_to_line_thickness.js
